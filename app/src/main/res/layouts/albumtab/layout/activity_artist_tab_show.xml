<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/colorPrimaryDark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/artist_show_image_cover"
        >
        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/artist_show_back"
            />
        <TextView
            android:id="@+id/artist_show_title_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/artist_show_back"
            android:layout_alignBaseline="@id/artist_show_back"
            android:textColor="@color/colorAccent"
            android:text="Demo"
            android:textSize="20sp"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:id="@+id/artist_show_list_view">
    </ListView>
</LinearLayout>