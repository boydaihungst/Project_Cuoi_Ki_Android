<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPlaylistIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="B"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tvPlaylistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten rut gon"
            android:layout_toEndOf="@id/tvPlaylistIcon"
            android:layout_alignBaseline="@id/tvPlaylistIcon"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvPlaylistNumOfSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:background="@color/colorAccent"
            android:layout_alignBaseline="@id/tvPlaylistIcon"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>